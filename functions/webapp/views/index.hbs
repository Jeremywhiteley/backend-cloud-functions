<!DOCTYPE html>
<html lang="en">

<head>
    \{{> headPartial this}}
    <link rel="stylesheet" href="css/home.css">
</head>

<body data-istemplatemanager="\{{isTemplateManager}}" data-isSupport="\{{isSupport}}" data-isAdmin="\{{isAdmin}}"
    data-offices="\{{adminOffices}}">
    \{{> headerPartial this}}
    <div class="pad-below-header"></div>
    \{{> actionsAside this}}
    <div class="container">
        <div id="search-box" class="pad-10 hidden">
            <form class="flexed">
                <input id="universal-search" type="text" class="input-field f1" placeholder="Search Growthfile">
            </form>
            <div class="flexed bg-white search-results-container">

                <ul id="unversal-search-results" class="raised">
                </ul>
            </div>
        </div>
        \{{#if isAdmin}}
        <section class="pad flexed flexed-jc-center flexed-column flexed-ai-center">
            <div class="mw-100">
                <h2>Select Your office</h2>
            </div>
            <form id="office-form" class="flexed-row mw-100">
                <select class="input-field mr-8 f1" id="office-selector">
                    \{{#each adminOffices}}
                    <option value="\{{this}}">\{{this}}</option>
                    \{{/each}}
                </select>
                <input type="button" value="Continue" onclick="startAdmin()">
            </form>
        </section>
        \{{/if}}

        \{{#if isSupport}}
        <section id="support-office-search" class="pad">
            <div id="office-search-title" class="tal mw-100">
                <h2>Search an office</h2>
            </div>
            <div>
                <form autocomplete="off" id="office-form" class="flexed">
                    <input placeholder="Type here..." class="input-field f1 mr-8" id="office-search-field" type="text">
                    <input type="button" value="Search" class="button" onclick="searchOffice()">
                </form>
                <div id="office-search-results" class="hidden border animated fadeIn mt-16">
                    <p id="error" class="hidden bold col-red"></p>
                    <ul id="office-search-results-ul" class="mdc-list"></ul>
                </div>
            </div>
        </section>
        \{{/if}}

        \{{#if isLoggedIn}}
        <section id="actions-section" class="hidden animated fadeIn action-icons-container pad">
            <h2 class="ttuc">My Growthfile</h2>
            <div class="bg-white br-8 pad border grid-container-3">
                <div id="view-enquiries" onclick="viewEnquiries()" class="card">
                    <span class="flexed-jc-center mb-16">
                        <i class="fas fa-question action-icon ft-size-20"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">View Enquiries</p>
                    </span>
                </div>
                {{!-- actions are shown for admin or support --}}
                \{{#if showActions}}
                <div id="update-auth" onclick="updateAuth()" class="card">
                    <span class="flexed-jc-center mb-16 ft-size-20">
                        <i class="fas fa-user-edit action-icon"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">Update Auth</p>
                    </span>
                </div>

                <div id="add-employees" onclick="createNew()" class="card">
                    <span class="flexed-jc-center mb-16 ft-size-20">
                        <i class="fas fa-user-plus action-icon"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">Create New</p>
                    </span>
                </div>

                <div id="trigger-reports" onclick="triggerReports()" class="card">
                    <span class="flexed-jc-center mb-16 ft-size-20">
                        <i class="far fa-file-excel action-icon"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">Trigger Reports</p>
                    </span>
                </div>

                <div id="employee-resign" onclick="employeeExit()" class="card">
                    <span class="flexed-jc-center mb-16 ft-size-20">
                        <i class="fas fa-user-minus action-icon"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">Employee Exit</p>
                    </span>
                </div>

                <div id="change-phone-number" onclick="changePhoneNumber()" class="card">
                    <span class="flexed-jc-center mb-16 ft-size-20">
                        <i class="fas fa-phone-volume action-icon"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">Update Phone Number</p>
                    </span>
                </div>

                <div id="update-recipient" onclick="updateEmailInReports()" class="card">
                    <span class="flexed-jc-center mb-16 ft-size-20">
                        <i class="fas fa-envelope-open-text action-icon"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">Update Report Mail Ids</p>
                    </span>
                </div>

                <div id="update-subscription" onclick="updateSubscription()" class="card">
                    <span class="flexed-jc-center mb-16 ft-size-20">
                        <i class="far fa-file-archive action-icon"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">Update Subscriptions</p>
                    </span>
                </div>

                <div id="update-activity" onclick="searchAndUpdate()" class="card">
                    <span class="flexed-jc-center mb-16 ft-size-20">
                        <i class="fas fa-font action-icon"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">Search & Update</p>
                    </span>
                </div>
                \{{/if}}

                \{{#if isTemplateManager}}
                <div id="manage-templates" class="card" onclick="manageTemplates(this)">
                    <span class="flexed-jc-center mb-16 ft-size-20">
                        <i class="fas fa-file-alt action-icon"></i>
                    </span>
                    <span class="tac ttuc">
                        <p class="icon-text">Manage Templates</p>
                    </span>
                </div>
                \{{/if}}
            </div>
        </section>
        \{{/if}}

        <section class="pad border hidden animated fadeIn" id="trigger-reports-section">
            <h2>Trigger a Report</h2>
            <p>
                Select a time and report to get the report on your email <span class="bold">\{{email}}</span>
            </p>

            <form>
                <div class="flexed mb-16">
                    <select id="report-trigger-select" class="f1 mr-8" class="input-field">
                    </select>
                    <input class="input-field" type="date" id="report-trigger-date">
                </div>
                <div class="flexed-jc-center">
                    <input id="trigger-report-button" class="button" type="button" value="Submit">
                </div>
            </form>
            <div class="tac mt-16">
                <p id="trigger-report-result" class="success-label hidden"></p>
            </div>

        </section>

        <section class="pad border hidden animated fadeIn" id="enquiries-container">
            <h2>YOUR ENQUIRIES</h2>
            <ul class="mdc-list mdc-list--two-line"></ul>
            <div id="no-enquiry-box" class="hidden flexed-column flexed-ai-center flexed-jc-center">
                <i class="fas fa-times-circle ft-60 transparent"></i>
                <p class="pt-16 italic">
                    No enquiries found for you.
                </p>
            </div>
        </section>

        <section class="pad border hidden animated fadeIn" id="search-and-update-section">
        </section>

        <section class="hidden pad border" id="manage-template-container">
            <ul class="flexed-se mh-72 flexed-ai-center bg-magenta col-white ttuc raised">
                <li>
                    <a class="flexed-ai-center flexed-column" href="#">
                        <i class="far fa-file-alt mb-8"></i>
                        <span>Templates</span>
                    </a>
                </li>
                <li class="" onclick="createNewTemplate(this)">
                    <a class="flexed-ai-center flexed-column" href="#">
                        <i class="fas fa-plus mb-8"></i>
                        <span>Create</span>
                    </a>
                </li>
            </ul>
            <div id="manage-templates-action" class="border template-action-result animated fadeIn">
                {{!-- Stuff after selecting the template --}}
            </div>
        </section>
        <section class="join-container">
            <div class="banner"></div>
            <div class="mb-16 pad">
                <h1 class="fw-400 col-white">
                    7 automations for highly effective businesses
                </h1>

                <span class="col-white">
                    Get more done, everyday!
                </span>
            </div>
            <div class="flexed-jc-center">
                <form class="join-form border flexed-column blue-gradient pad-10">
                    <label class="bold ttuc mb-8" for="phone">Phone Number</label>
                    <input tabindex="0" placeholder="e.g. +91876543210" id="phone" type="tel" class="input-field mb-16">

                    <label class="hidden bold ttuc mb-8" for="">Office</label>
                    <input placeholder="e.g, Acme Corp..." type="text" class=" hidden input-field mb-16">

                    <label class="hidden ttuc bold mb-8" for="email">Your Email</label>
                    <input type="email" placeholder="me@growthfile.com" class="hidden input-field mb-16">

                    <label class="hidden bold ttuc mb-8" for="alt-contact">Alternate Contact</label>
                    <input id="alt-contact" type="tel" class="hidden input-field mb-16" placeholder="e.g. 9186543210">

                    <input class="button mb-16" type="button" value="Start For Free">
                    {{!-- phone number, office name, alternate phone number, alternate email --}}
                    <p class="ft-12">
                        By signing up, you agree to Growthfile's
                        <a class="underline col-gray" href="/terms-and-conditions">Terms & Conditions</a>.
                    </p>
                    <p class="ft-12">
                        This site is protected by reCAPTCHA and the Google
                        <a class="underline col-gray" href="https://policies.google.com/privacy">Privacy Policy</a>
                        and
                        <a class="underline col-gray" href="https://policies.google.com/terms">Terms of Service</a>
                        apply.
                    </p>
                </form>
            </div>
        </section>
        \{{> featuredPartial}}
        \{{> appFeatures}}
        \{{> footerPartial}}
        <div id="modal-box"></div>
    </div>
    \{{> scriptsPartial}}
    <script src="js/home.js"></script>
</body>

</html>
